<UserControl x:Class="Abo.Client.WP.Silverlight.Seedwork.Controls.WebImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" x:Name="thisControl">

    <Grid Background="#3A3A3A">
        <Image Stretch="UniformToFill" x:Name="image" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

        <!--<ProgressBar IsIndeterminate="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        </ProgressBar>-->
        <TextBlock x:Name="progress" FontSize="11" Text="Loading..." VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>